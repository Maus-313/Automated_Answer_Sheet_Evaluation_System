generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AnswerSheet {
  id        String   @id @default(uuid()) @db.Uuid
  rollNo    String
  name      String
  slot      String   // e.g. "CAT1", "FAT"
  examDate  DateTime
  examType  String   // optional: CAT/FAT/Final etc.
  answers   Json     // store all answers in one JSON blob for now
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([rollNo, slot])
}